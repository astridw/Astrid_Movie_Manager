<center>

  <table class="pretty">
    <thead>
      <tr>
        <th><%= sort_link(@q, :title) %></th>
        <th><%= sort_link(@q, :format) %></th>
        <th><%= sort_link(@q, :length) %></th>
        <th><%= sort_link(@q, :release_year)%></th>
        <th><%= sort_link(@q, :rating)%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody class="body">
      <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to movie.title, movie %></td>
          <td><%= movie.format %></td>
          <td><%= movie.length %></td>
          <td><%= movie.release_year %></td>
          <td><%= movie.rating %></td>
          <!-- <td><%= link_to 'Show', movie %></td> -->
          <!-- <td><%= link_to 'Edit', edit_movie_path(movie) %></td> -->
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</center>
